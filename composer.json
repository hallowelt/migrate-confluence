{
	"name": "hallowelt/migrate-confluence",
	"type": "project",
	"description": "Tool to convert Confluence Export XML into MediaWiki import XML",
	"keywords": [
		"wiki",
		"MediaWiki",
		"Confluence"
	],
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Robert Vogel",
			"email": "vogel@hallowelt.com"
		}
	],
	"repositories": [{
		"type": "composer",
		"url": "https://packages.bluespice.com/"
	}],
	"require": {
		"psr/log": "~1.1",
		"hallowelt/mediawiki-lib-mediawikixml": "~1",
		"hallowelt/mediawiki-lib-commandline-tools": "~2",
		"hallowelt/mediawiki-lib-migration": "~3",
		"hallowelt/mediawiki-lib-wikitext": "~1",
		"ext-dom": "*",
        "symfony/yaml": "^7.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "^45.0",
		"mediawiki/mediawiki-phan-config": "^0.14",
		"mediawiki/minus-x": "^1.1",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.4",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"HalloWelt\\MigrateConfluence\\": "src/",
			"HalloWelt\\MigrateConfluence\\Tests\\": "tests/phpunit/"
		}
	},
	"scripts": {
		"unittest": [
			"vendor/phpunit/phpunit/phpunit --configuration .phpunit.xml"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -sp"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"lint": [
			"phan --no-progress-bar -m text | sed 's, ,:,'"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
